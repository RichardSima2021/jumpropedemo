<view class = "contentBox" throttle="{{false}}">
    <t-tabs
        class="custom-tabs" 
        defaultValue="{{0}}" 
        bind:change="onTabsChange"   
    >
        <t-tab-panel class="tab-text" label="跳绳" value="0">
            <t-pull-down-refresh
                value="{{enable}}"
                loadingProps="{{loadingProps}}"
                loadingTexts="{{['下拉刷新', '松手刷新', '正在刷新', '刷新完成']}}"
                bind:refresh="onRefresh"
            >
              <text class="comps">所有比赛</text>

                <h-scroll-contest-list>
                  
                </h-scroll-contest-list>
                <!-- <contest-card eventTitle="test" eventDate="testDate"></contest-card> -->
                <contest-card wx:for="{{eventsCache}}" wx:for-item="itemName" eventTitle="{{itemName.eventName}}" eventDate="{{itemName.date}}"></contest-card>
                <!-- <contest-list readEventList="{{fakeDB}}">
                </contest-list> -->

                <view wx:if="{{noMoreContent}}">
                  <t-divider content="没有更多了" />
                </view>
            </t-pull-down-refresh>
        

        </t-tab-panel>

        <t-tab-panel class="tab-text" label="足球" value="1" />



    </t-tabs>
</view>
